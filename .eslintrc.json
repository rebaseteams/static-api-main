{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.spec.ts",
                    "**/*.spec.tsx"
                ]
            }
        ],
        "no-console": "off",
        "no-restricted-syntax": "error",
        "no-await-in-loop": "off",
        "guard-for-in": "error",
        "no-implicit-coercion": "error",
        "camelcase": "off"
    }
}