{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/**/*.yaml"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}